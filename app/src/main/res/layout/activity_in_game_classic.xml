<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.twotowerstudios.clickr.InGameClassic"
    android:id="@+id/IGLayout"
    android:background="#1a88eb"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click the  button to start"
        android:id="@+id/tvBanner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/bStart"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#00fdca"
        android:width="64dp"
        android:height="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvCountDown"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="120dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF6600"
        android:text="Click me!"
        android:id="@+id/bClicker"

        android:width="64dp"
        android:height="40dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tvScore"
        android:layout_below="@+id/tvBanner"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Button Height: "
        android:id="@+id/debugButtonH"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bClicker"
        android:layout_toEndOf="@+id/bClicker"
        android:textColor="#ff0f00"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Button Width: "
        android:id="@+id/debugButtonW"
        android:layout_above="@+id/debugButtonH"
        android:layout_alignLeft="@+id/debugButtonH"
        android:layout_alignStart="@+id/debugButtonH"
        android:textColor="#ff0f00"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Button Y coordinates"
        android:id="@+id/debugButtonY"
        android:layout_above="@+id/debugButtonW"
        android:layout_alignLeft="@+id/debugButtonW"
        android:layout_alignStart="@+id/debugButtonW"
        android:textColor="#ff0f00"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Button X coordinates: "
        android:id="@+id/debugButtonX"
        android:layout_above="@+id/debugButtonY"
        android:layout_alignLeft="@+id/debugButtonY"
        android:layout_alignStart="@+id/debugButtonY"
        android:textColor="#ff0f00"
        android:visibility="invisible" />

</RelativeLayout>
