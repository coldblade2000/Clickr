<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="#1a88eb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.95">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLICKR"
            android:id="@+id/tvName"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Two Tower Studios"
            android:id="@+id/tvStudio"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:id="@+id/space3"
            android:layout_weight="0.25" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:id="@+id/bPlay"
            android:layout_marginTop="20dp"
            android:background="@drawable/mainmenubuttonlayout1"
            android:shadowColor="#FF8900"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textColor="#f57c00"
            android:typeface="monospace" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.25" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THEMES"
            android:id="@+id/bThemes"
            android:layout_marginTop="10dp"
            android:background="@drawable/mainmenubuttonlayout1"
            android:shadowColor="#FF8900"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textColor="#e65100"
            android:textColorHighlight="#f57c00" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.25"
            android:id="@+id/space" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORES"
            android:id="@+id/bStore"
            android:layout_marginTop="10dp"
            android:background="@drawable/mainmenubuttonlayout1"
            android:shadowColor="#FF8900"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textColorHighlight="#004d40"
            android:textColor="#004d40" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.25"
            android:id="@+id/space2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:id="@+id/bSettings"
            android:layout_marginTop="10dp"
            android:background="@drawable/mainmenubuttonlayout1"
            android:shadowColor="#FF8900"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center_horizontal"
            android:textSize="35sp"
            android:height="70dp"
            android:width="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:weightSum="1"
        android:paddingTop="10sp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:src="@drawable/facebookbutton"
            android:layout_gravity="bottom|left" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:src="@drawable/googleplusbutton" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView3"
            android:src="@drawable/twitterbutton" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView6"
            android:src="@drawable/musiconbutton" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView5"
            android:src="@drawable/volumeonbutton" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView4"
            android:src="@drawable/informationbutton1" />

    </LinearLayout>

</LinearLayout>

