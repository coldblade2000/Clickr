<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.twotowerstudios.clickr.Settings"
    android:background="#439DED"
    android:id="@+id/RLSettings">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbDebugMode"
        android:button="@drawable/checkbox"
        android:checked="false"
        android:layout_alignBottom="@+id/bEnableDebugMode"
        android:layout_toRightOf="@+id/bEnableDebugMode"
        android:layout_toEndOf="@+id/bEnableDebugMode"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Debug mode"
        android:id="@+id/bEnableDebugMode"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Background"
        android:id="@+id/bEnableBackground"
        android:layout_below="@+id/bEnableDebugMode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbEnableBackground"
        android:button="@drawable/checkbox"
        android:checked="false"
        android:layout_below="@+id/cbDebugMode"
        android:layout_alignLeft="@+id/cbDebugMode"
        android:layout_alignStart="@+id/cbDebugMode"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Application"
        android:id="@+id/bRestart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
